# Shared Android Fastlane Configuration
# Usage: fastlane android dev/prod

default_platform(:android)

# Flavor-aware ENV lookup
# Checks {FLAVOR}_KEY first, falls back to KEY
# Example: FLAVOR=secil → checks SECIL_ANDROID_PACKAGE_NAME, then ANDROID_PACKAGE_NAME
def env_with_flavor(key)
  flavor = ENV['FLAVOR']
  if flavor && !flavor.empty?
    flavor_key = "#{flavor.upcase}_#{key}"
    return ENV[flavor_key] if ENV[flavor_key] && !ENV[flavor_key].empty?
  end
  ENV[key]
end

def find_latest_aab
  aab_pattern = File.join(@project_root, "build/app/outputs/bundle/**/*.aab")
  aab_files = Dir.glob(aab_pattern)
  return aab_files.max_by { |f| File.mtime(f) }
end

# Find Flutter project root by walking up and looking for pubspec.yaml
def find_project_root
  dir = Dir.pwd
  while dir != '/'
    return dir if File.exist?(File.join(dir, 'pubspec.yaml'))
    dir = File.dirname(dir)
  end
  nil
end

platform :android do

  before_all do |lane, options|
    skip_docs

    # Priority: 1) CI workspace 2) find pubspec.yaml
    @project_root = ENV["GITHUB_WORKSPACE"] ||        # GitHub Actions
                    ENV["CI_PROJECT_DIR"] ||          # GitLab
                    ENV["BUILD_SOURCESDIRECTORY"] ||  # Azure DevOps
                    find_project_root
    
    UI.user_error!("❌ Could not find Flutter project root!") unless @project_root
  end

  desc "Upload to Play Store Production"
  lane :prod do
    deploy(track: "production")
  end

  desc "Upload to Play Store Beta"
  lane :dev do
    deploy(track: "beta")
  end

  desc "Upload to Play Store"
  lane :deploy do |options|
    track = options[:track] || "beta"

    aab_file = find_latest_aab
    unless aab_file && File.exist?(aab_file)
      UI.user_error!("❌ AAB file not found! Run build first.")
    end
    
    upload_to_play_store(
      aab: aab_file,
      track: track,
      metadata_path: env_with_flavor('ANDROID_METADATA_PATH') || "metadata",
      skip_upload_metadata: true,
      release_status: "completed"
    )
  end
end
