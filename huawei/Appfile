# Shared Huawei configuration
# Uses ANDROID_PACKAGE_NAME as default package name

def env_with_flavor(key)
  flavor = ENV['FLAVOR']
  if flavor && !flavor.empty?
    flavor_key = "#{flavor.upcase}_#{key}"
    return ENV[flavor_key] if ENV[flavor_key] && !ENV[flavor_key].empty?
  end
  ENV[key]
end

package = env_with_flavor('ANDROID_PACKAGE_NAME')
UI.user_error!("‚ùå HUAWEI package name (via ANDROID_PACKAGE_NAME) is required!") unless package

package_name(package)
